@model FavoriteExercises

<h2>Favorite Exercises</h2>

<table class="table">
    <tr>
        <th>Name</th>
        <th>Body Part</th>
        <th>Target Muscle</th>
        <th>Equipment</th>
        <th></th>
    </tr>

    @foreach (var exercise in @Model.FavoriteExercisesList)
    {
        @using (Html.BeginForm("RemoveExerciseFromFavorites", "Exercise", "Post"))
        {
            <tr>
                <input asp-for="@Model.ExerciseID" type="hidden" value="@exercise.ExerciseID" />
                <td>@exercise.Name.ToUpper()</td>
                <td>@exercise.BodyPart.ToUpper()</td>
                <td>@exercise.TargetMuscle.ToUpper()</td>
                <td>@exercise.Equipment.ToUpper()</td>
                <td>
                    <a href=/Exercise/ViewExercise/@exercise.ExerciseID>View</a>
                    <input type="submit" onclick="return confirm('Are you sure?')" value="Remove">
                </td>
            </tr>
        }
    }
</table>
