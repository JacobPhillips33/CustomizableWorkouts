@model IEnumerable<Exercise>

<h2>Favorite Exercises</h2>

<table class="table">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Body Part</th>
        <th>Target Muscle</th>
        <th>Equipment</th>
        <th>Remove From Favorites</th>
    </tr>

    @foreach (var exercise in @Model)
    {
        <tr>
            <td><a href=/Exercise/ViewExercise/@exercise.ExerciseID>@exercise.ExerciseID</a></td>
            <td>@exercise.Name.ToUpper()</td>
            <td>@exercise.BodyPart.ToUpper()</td>
            <td>@exercise.TargetMuscle.ToUpper()</td>
            <td>@exercise.Equipment.ToUpper()</td>
            <td>
                @using (Html.BeginForm("RemoveExerciseFromFavorites", "Exercise", "Delete"))
                {
                    <input asp-for="@exercise.ExerciseID" type="hidden" value="@Model.Where(x => x.ExerciseID == exercise.ExerciseID)" />
                    <input asp-for="@exercise.ApiID" type="hidden" value="@Model.Where(x => x.ApiID == exercise.ApiID)" />
                    <input asp-for="@exercise.Name" type="hidden" value="@Model.Where(x => x.Name == exercise.Name)" />
                    <input asp-for="@exercise.BodyPart" type="hidden" value="@Model.Where(x => x.BodyPart == exercise.BodyPart)" />
                    <input asp-for="@exercise.TargetMuscle" type="hidden" value="@Model.Where(x => x.TargetMuscle == exercise.TargetMuscle)" />
                    <input asp-for="@exercise.Equipment" type="hidden" value="@Model.Where(x => x.Equipment == exercise.Equipment)" />
                    <input asp-for="@exercise.GifUrl" type="hidden" value="@Model.Where(x => x.GifUrl == exercise.GifUrl)" />

                    <input type="submit" onclick="return confirm('Are you sure?')" value="Remove from Favorites" class="btn btn-danger" />
                }
            </td>
            <td><a href=/Exercise/ViewExercise/@exercise.ExerciseID>Remove This Exercise</a></td>
        </tr>
    }

</table>
