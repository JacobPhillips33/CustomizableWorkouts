@model IEnumerable<Exercise>

<h2>Favorite Exercises</h2>

<table class="table">
    <tr>
        <th><a href=/Exercise/ViewByIDDesc>ID</a></th>
        <th><a href=/Exercise/ViewByNameDesc>Name</a></th>
        <th><a href=/Exercise/ViewByBodyPartAsc>Body Part</a></th>
        <th><a href=/Exercise/ViewByTargetMuscleAsc>Target Muscle</a></th>
        <th><a href=/Exercise/ViewByEquipmentAsc>Equipment</a></th>
        <th>Remove From Favorites</th>
    </tr>

    @foreach (var exercise in @Model)
    {
        <tr>
            <td><a href=/Exercise/ViewExercise/@exercise.ExerciseID>@exercise.ExerciseID</a></td>
            <td>@exercise.Name.ToUpper()</td>
            <td>@exercise.BodyPart.ToUpper()</td>
            <td>@exercise.TargetMuscle.ToUpper()</td>
            <td>@exercise.Equipment.ToUpper()</td>
            <td>
                @using (Html.BeginForm("RemoveExerciseFromFavorites", "Exercise", "Delete")) 
                {
                    <input asp-for="@exercise.ExerciseID" type="hidden" value="@exercise.ExerciseID" />
                    <input asp-for="@exercise.ApiID" type="hidden" value="@exercise.ApiID" />
                    <input asp-for="@exercise.Name" type="hidden" value="@exercise.Name" />
                    <input asp-for="@exercise.BodyPart" type="hidden" value="@exercise.BodyPart" />
                    <input asp-for="@exercise.TargetMuscle" type="hidden" value="@exercise.TargetMuscle" />
                    <input asp-for="@exercise.Equipment" type="hidden" value="@exercise.Equipment" />
                    <input asp-for="@exercise.GifUrl" type="hidden" value="@exercise.GifUrl" />
                    <input type="submit" asp-for="@exercise" onclick="return confirm('Are you sure?')" value="Remove This Exercise" />
                }
            </td>
        </tr>
    }

</table>
