@model IEnumerable<Exercise>

<h2>Favorite Exercises</h2>

<table class="table">
    <tr>
        <th><a href=/Exercise/ViewByIDDesc>ID</a></th>
        <th><a href=/Exercise/ViewByNameDesc>Name</a></th>
        <th><a href=/Exercise/ViewByBodyPartAsc>Body Part</a></th>
        <th><a href=/Exercise/ViewByTargetMuscleAsc>Target Muscle</a></th>
        <th><a href=/Exercise/ViewByEquipmentAsc>Equipment</a></th>
        <th>Remove From Favorites</th>
    </tr>

    @foreach (var exercise in @Model)
    {
        <tr>
            <td><a href=/Exercise/ViewExercise/@exercise.ExerciseID>@exercise.ExerciseID</a></td>
            <td>@exercise.Name.ToUpper()</td>
            <td>@exercise.BodyPart.ToUpper()</td>
            <td>@exercise.TargetMuscle.ToUpper()</td>
            <td>@exercise.Equipment.ToUpper()</td>
            <td><a href=/Exercise/ViewExercise/@exercise.ExerciseID>Remove This Exercise</a></td>
        </tr>
    }

</table>
