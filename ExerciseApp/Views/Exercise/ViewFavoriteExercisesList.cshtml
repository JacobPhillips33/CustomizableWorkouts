@model IEnumerable<Exercise>

<h2>Favorite Exercises</h2>

<table class="table">
    <tr>
        <th>Name</th>
        <th>Body Part</th>
        <th>Target Muscle</th>
        <th>Equipment</th>
        <th></th>
    </tr>

    @foreach (var exercise in @Model)
    {
        <tr>
            <td>@exercise.Name.ToUpper()</td>
            <td>@exercise.BodyPart.ToUpper()</td>
            <td>@exercise.TargetMuscle.ToUpper()</td>
            <td>@exercise.Equipment.ToUpper()</td>
            <td>
                <a href=/Exercise/ViewExercise/@exercise.ExerciseID>View</a> |
                <a href=/Exercise/ViewExerciseToRemove/@exercise.ExerciseID>Remove</a>
            </td>
        </tr>
    }

</table>
