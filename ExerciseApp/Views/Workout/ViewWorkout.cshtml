@model Workout

<h2>@Model.WorkoutName</h2>

<table class="table">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Reps</th>
        <th>Sets</th>
    </tr>

    @foreach (var exercise in @Model.WorkoutExercises)
    {
        <tr>
            <td><a href=/Exercise/ViewExercise/@exercise.ExerciseID>@exercise.ExerciseID</a></td>
            <td>@exercise.Name.ToUpper()</td>
            <td>@exercise.Reps</td>
            <td>@exercise.Sets</td>
            <td>
                <a href=/Exercise/ViewExercise/@exercise.ExerciseID>View</a> |
                <a href=/Exercise/UpdateWorkoutExercise/@exercise.ExerciseID>Edit</a> | @*update link path*@
                <a href=/Exercise/RemoveWorkoutExercise/@exercise.ExerciseID>Remove</a> @*update link path*@
            </td>
        </tr>
    }

</table>
